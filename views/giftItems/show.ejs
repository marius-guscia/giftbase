<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card">
                <img src="" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <%=giftItem.name%>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">

                        <div class="d-flex justify-content-between">
                            <div>Price:
                            </div>
                            <div> $<%=giftItem.unit_price%>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between">
                            <div>In Stock:</div>
                            <div>
                                <%=giftItem.units_owned%>
                            </div>
                        </div>
                    </li>
                </ul>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-secondary" href="/giftitems/">Back</a>
                        <form action="/giftItems/<%=giftItem._id%>/?_method=DELETE" method="POST">
                            <button class="card-link btn btn-outline-danger">Delete</button>
                        </form>
                        <a class="card-link btn btn-outline-success" href="/giftitems/<%=giftItem._id%>/edit">Edit</a>
                    </div>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>